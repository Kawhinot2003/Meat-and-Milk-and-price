<Window x:Class="Meat_and_Milk_and__price.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Meat_and_Milk_and__price"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300" ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="15"/>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock Text="Учет цен на мясо и молоко" FontSize="20" FontWeight="Bold"/>
            
        </StackPanel>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="Product_Group_btn" Content="Группа продуктов" Click="Product_Group_bt_Click"/>
            <Button x:Name="Products_btn" Content="Продукты" Click="Products_btn_Click" Margin="0 10 0 10"/>
            <Button x:Name="Products_pdf_btn" Content="Экспорт продуктов" Click="Products_pdf_btn_Click"/>
        </StackPanel>
    </Grid>
</Window>
